generator client {
  provider = "prisma-client-js"
}

generator zod {
  provider              = "zod-prisma"
  output                = "./zod"
  relationModel         = true
  modelCase             = "camelCase"
  modelSuffix           = "Schema"
  useDecimalJs          = true
  prismaJsonNullability = true
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id             String    @id
  email          String    @unique
  hashedPassword String
  name           String?
  sessions       Session[]
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)
}

model Page {
  id          String     @id @default(cuid())
  name        String
  description String
  slug        String     @unique
  public      Boolean
  userId      String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  pageLinks   PageLink[]
}

model PageLink {
  id        String   @id @default(cuid())
  title     String
  url       String
  page      Page     @relation(fields: [pageId], references: [id], onDelete: Cascade)
  pageId    String
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}
